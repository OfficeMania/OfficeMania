{
    "compilerOptions": {
        "target": "ES2019",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "outDir": "../../dist/common",
        "lib": ["ES2019"],
        "composite": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["./**/*.test.ts"],
    "references": [{ "path": "../client" }]
}